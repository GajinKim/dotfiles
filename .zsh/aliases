# General aliases
alias desktop='cd ~/Desktop'
alias downloads='cd ~/Downloads'
alias working='cd ~/Workspace'
alias workspace='cd ~/Workspace'
alias ws='cd ~/Workspace'
alias sai='cd ~/SAIWorkspace'
alias refresh='source ~/.zshrc'
alias configs='cd ~/.config'
alias config='cd ~/.config'

alias aliases='nvim ~/.zsh/aliases'
alias shortcuts='nvim ~/.zsh/aliases'
alias mappings='nvim ~/.config/nvim/vim/mappings.vim'

# Git aliases
alias g="git"
alias ga="git add"
alias add="git add"
alias gco="git checkout"
alias push="git push"
alias pull="git pull"
alias commit="git commit -m"
alias uncommit="git reset HEAD~1"

# Cloud aliases
alias tf="terraform"
alias tg="terragrunt"

# Workflow aliases
alias n='nvim'
alias venv='source ./venv/bin/activate' # Save a lil bit of time
alias :q="exit"

# ssh aliases
alias keys='cd ~/Documents/.keys'

